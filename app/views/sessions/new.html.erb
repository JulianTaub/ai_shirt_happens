<% if @user.errors.any? %>
<ul class="views">
  <% @user.errors.full_messages.each do |error| %>
    <li class="error"><%= error %></li>
  <% end %>
</ul>
<% end %>
<section class="banner square">
  <h1>Sign in!</h1>
  <h2>Great things await!</h2>
  
  <%= form_tag sign_in_path do %>
  <ul class="row forms">
    <li class="col-md-4"><%= label_tag :email %></li>
    <li class="col-md-8"><%= email_field_tag :email %></li>
    <li class="col-md-4"><%= label_tag :password %></li>
    <li class="col-md-8"><%= password_field_tag :password %></li>
     </ul>
    <%= submit_tag "Sign in!", class: :redbtn %>
  <% end %>
 
</section>