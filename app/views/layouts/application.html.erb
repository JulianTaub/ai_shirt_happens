<!DOCTYPE html>
<html>
<head>
  <title>ShirtHappens</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='container'>
  <%= link_to "BUY MOAR SHIRTS!!", random_shirt_path %>
  <p><%= notice %></p>
  <% if logged_in? %>
    <p>Hey, <%= current_user.email %></p>
    <p><%= link_to "Sign out", sign_out_path, method: :delete %></p>
  <% else %>
    <p><%= link_to "Sign up", sign_up_path %> | <%= link_to "Sign in", sign_in_path %></p>
  <% end %>
  <p><%= link_to "Shirts", shirts_path %></p>


<%= yield %>

</body>
</html>
